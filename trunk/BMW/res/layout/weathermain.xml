<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/weather_main"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
	<LinearLayout
		android:orientation="horizontal"
		android:gravity="center"
        android:layout_width="fill_parent"
		android:background="@drawable/button_bg3"
        android:layout_height="53px">
	<Button android:id="@+id/seoul_button"
        android:layout_width="75px" 
        android:layout_height="50px"
        android:text="서울"/>
	<Button android:id="@+id/daejeon_button"
        android:layout_width="75px" 
        android:layout_height="50px"
        android:text="대전"/>
	<Button android:id="@+id/taegu_button"
        android:layout_width="75px" 
        android:layout_height="50px"
        android:text="대구"/>
	<Button android:id="@+id/pusan_button"
        android:layout_width="75px" 
        android:layout_height="50px"
        android:text="부산"/>
    </LinearLayout>
    
			<LinearLayout android:id="@+id/contents"
        	android:layout_width="fill_parent" 	
        	android:layout_height="0dip"
        	android:visibility="visible"
        	android:layout_weight="1" 
        	>
    	</LinearLayout>
</LinearLayout>