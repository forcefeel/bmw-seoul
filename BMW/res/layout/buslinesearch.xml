<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/busStopSearch"
	android:background="#00000000"
   	android:layout_width="fill_parent" 	
   	android:layout_height="fill_parent"
   	android:visibility="visible"
   	android:layout_weight="1" >
   	
	<TextView android:id="@+id/main_title"
		android:textSize="18sp"
		android:textColor="#FFFFFF"
		android:gravity="center_horizontal"
		android:text="버스 노선 검색"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"/>
		
<RelativeLayout
android:id="@+id/chosungwords"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
		android:layout_below="@+id/main_title"
>
	<EditText 
			android:id="@+id/busSearchTextBox"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=""
			android:textSize="18sp"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			>
	></EditText>
	<LinearLayout
		android:id="@+id/listItemBusLine"
		android:orientation="vertical"
       	android:layout_width="fill_parent" 
       	android:layout_height="wrap_content"
		android:layout_below="@+id/busSearchTextBox"
   	>
	</LinearLayout>
</RelativeLayout>
</RelativeLayout>