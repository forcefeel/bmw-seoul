<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/busStopArrival"
	android:background="@drawable/background"
   	android:layout_width="fill_parent" 	
   	android:layout_height="fill_parent"
   	android:visibility="visible"
   	android:layout_weight="1" >
	<TextView android:id="@+id/main_title"
		android:textSize="18sp"
		android:textColor="#FFFFFF"
		android:gravity="center_horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"/>
	<TextSwitcher android:id="@+id/switcher"
		android:textColor="#FF003400"
		android:layout_below="@+id/main_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
	<TextView 
			android:id="@+id/words1"
			android:textColor="#000000"
    		android:layout_width="160px" 
			android:layout_height="wrap_content"
			android:textSize="17dip"
			android:text="asdads"
			android:gravity="center_horizontal"
			android:paddingBottom="5px"
			android:layout_below="@+id/switcher"
	></TextView>	
	<TextView 
			android:id="@+id/words2"
			android:textColor="#000000"
    		android:layout_width="160px"
			android:layout_height="wrap_content"
			android:textSize="17dip"
			android:text="asdads"
			android:gravity="center_horizontal"
			android:paddingBottom="5px"
			android:layout_below="@+id/switcher"
			android:layout_toRightOf="@+id/words1"
	></TextView>
		<LinearLayout
			android:id="@+id/listitemarrival"
			android:orientation="vertical"
        	android:layout_width="fill_parent" 
        	android:layout_height="wrap_content"
			android:layout_below="@+id/words2"
        	
        	>
        </LinearLayout>
</RelativeLayout>